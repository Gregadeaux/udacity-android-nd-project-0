<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="My Nanodegree Apps!"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/main_button_spotify"
                style="@style/ButtonTheme"
                android:text="Spotify Streamer"/>
            <Button
                android:id="@+id/main_button_scores"
                style="@style/ButtonTheme"
                android:text="Super Duo"/>
            <Button
                android:id="@+id/main_button_build"
                style="@style/ButtonTheme"
                android:text="Build It Bigger"/>
            <Button
                android:id="@+id/main_button_xyz"
                style="@style/ButtonTheme"
                android:text="XYZ Reader"/>
            <Button
                android:id="@+id/main_button_capstone"
                style="@style/ButtonTheme"
                android:text="Capstone: My Own App"/>
        </LinearLayout>
    </LinearLayout>

</layout>
